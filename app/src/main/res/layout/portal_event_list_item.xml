<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>
    
    <ImageView
        android:id="@+id/event_type_image"
        android:layout_marginLeft="@dimen/portal_list_name_margin"
        android:layout_marginBottom="@dimen/portal_event_list_item_margin"
        android:layout_marginTop="@dimen/portal_event_list_item_margin"
        android:layout_below="@+id/divider"
        android:src="@drawable/ic_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event_date_text"
        android:layout_marginRight="@dimen/portal_list_item_text_margin_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/default_time_in_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>