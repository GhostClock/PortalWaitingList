<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:text="@string/setting_smart_order"
        android:textColor="@color/setting_item_group_title_text"
        android:layout_marginTop="@dimen/setting_item_group_title_margin_vertical"
        android:layout_marginLeft="@dimen/setting_item_group_title_margin_horizon"
        android:layout_marginRight="@dimen/setting_item_group_title_margin_horizon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- default sort order for waiting portals -->
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/setting_item_group_title_margin_vertical"
        android:paddingBottom="@dimen/setting_item_group_title_margin_vertical"
        android:paddingLeft="@dimen/setting_item_group_title_margin_horizon"
        android:paddingRight="@dimen/setting_item_group_title_margin_horizon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="@string/setting_smart_order_waiting_sort_order"
            android:textSize="@dimen/setting_item_text_size"
            android:textColor="@color/setting_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/setting_smart_order_default_sort_order"
            android:layout_marginTop="@dimen/setting_item_sub_text_margin_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/setting_item_separator_margin_horizon"
        android:layout_marginRight="@dimen/setting_item_separator_margin_horizon"
        android:background="@android:color/darker_gray"/>

    <!-- short time setting -->
    <LinearLayout
        android:id="@+id/setting_short_time_line"
        android:background="@drawable/setting_item_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/setting_item_group_title_margin_vertical"
        android:paddingBottom="@dimen/setting_item_group_title_margin_vertical"
        android:paddingLeft="@dimen/setting_item_group_title_margin_horizon"
        android:paddingRight="@dimen/setting_item_group_title_margin_horizon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/setting_smart_order_short_time"
            android:textSize="@dimen/setting_item_text_size"
            android:textColor="@color/setting_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/setting_smart_order_short_time_describe"
            android:layout_marginTop="@dimen/setting_item_sub_text_margin_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/setting_item_sub_text_margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setting_smart_order_short_time_value"
                android:text="@string/setting_smart_order_short_time_default_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/setting_smart_order_time_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/setting_item_separator_margin_horizon"
        android:layout_marginRight="@dimen/setting_item_separator_margin_horizon"
        android:background="@android:color/darker_gray"/>

    <!-- long time setting -->
    <LinearLayout
        android:id="@+id/setting_long_time_line"
        android:background="@drawable/setting_item_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/setting_item_group_title_margin_vertical"
        android:paddingBottom="@dimen/setting_item_group_title_margin_vertical"
        android:paddingLeft="@dimen/setting_item_group_title_margin_horizon"
        android:paddingRight="@dimen/setting_item_group_title_margin_horizon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/setting_smart_order_long_time"
            android:textSize="@dimen/setting_item_text_size"
            android:textColor="@color/setting_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/setting_smart_order_long_time_describe"
            android:layout_marginTop="@dimen/setting_item_sub_text_margin_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/setting_item_sub_text_margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setting_smart_order_long_time_value"
                android:text="@string/setting_smart_order_long_time_default_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/setting_smart_order_time_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>